{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
     "lib": [
       "esnext",
       "dom"
     ],
    "allowJs": true,
    "outDir": "./dist",                        
    "rootDir": "./src/",
    "esModuleInterop": true,
     "preserveSymlinks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src",
    "./tools",
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "**/__tests__"
  ]
}
